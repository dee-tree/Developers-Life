<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DevelopersLive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cream</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_yellow</item>
        <item name="colorSecondaryVariant">@color/pistachio</item>
        <item name="colorOnSecondary">@color/brown_alpha_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="TitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ContentHandlerButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">@dimen/content_handler_stroke_width</item>
        <item name="strokeColor">?colorOnSecondary</item>
        <item name="iconTint">@drawable/icon_color_content_handler</item>
        <item name="cornerRadius">@dimen/content_handler_corner_radius</item>
        <item name="rippleColor">?colorOnSecondary</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="itemIconTint">@color/color_bottom_navigation</item>
        <item name="itemTextColor">@color/color_bottom_navigation</item>
    </style>

</resources>